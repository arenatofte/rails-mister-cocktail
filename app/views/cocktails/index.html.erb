<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.2) 50%), url('<%= image_path 'cocktails.jpg' %>');">
  <div class="banner-content">
    <h1 class="text-danger">Per's Cocktail Menu</h1>
    <h4 class="text-warning">Lethal concoctions to forget about your stresses!</h4>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-12 col-md-6 col-lg-3">
      <div>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
          <div class="card-description">
            <h2 class="text-info"><%= cocktail.name %></h2>
          </div>
          <%= link_to "View/edit cocktail", cocktail_path(cocktail), class: 'card-link' %>
        </div>
        <%= link_to cocktail_path, method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="fa fa-trash destroy_cocktail"></i>
        <% end %> 
      </div>
    </div>
    <% end %>
  </div>
</div>
